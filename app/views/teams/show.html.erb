<div class="container mt-5">
  <h2>Hoverable Dark Table</h2>
  <p>The .table-hover class adds a hover effect (grey background color) on table rows:</p>            
  <table class="table table-dark table-hover">
    <thead>
      <tr>
        <th>PlayerId</th>
        <th>PlayerName</th>
        <th>Email</th>
        <th>Joined</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <%@teams.users.each do |tu|%>
      <tr>
        <td><%= tu.first_name %></td>
        <td><%= tu.last_name %></td>
        <td><%= tu.email %></td>
        <td><%= tu.created_at.to_date %></td>
        <td> <%= link_to 'Exit', user_team_path(tu.id),class:"btn btn-sm btn-danger",method: :delete %>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>