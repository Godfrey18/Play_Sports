
<div class ="container mt-5">
 
     <div class ="row">
        <div class ="col-8">
                <%= form_for(@teams,:html =>{class: "form-horizontal",role: "form"}) do |f|%>
                   <div class="card text-center ">
                      <div class="card-header bg-warning">
                        Create Team
                      </div>
                       <div class="card-body col-6 ">

                               <%= f.text_field :team_name,class: "form-control ml-5",placeholder:"Team Name",autofocus:true%>
                                 <%= f.submit "Create Team",class:"btn btn-md btn-primary mt-2 " %>
                             
                        </div>
                        <div class="card-footer text-muted bg-light">
                            2 days ago
                          </div>
                   </div>
                   
                <% end %>

        </div>
    </div>

  