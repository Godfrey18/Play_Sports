

<div class="container ml-5 mt-3">

<div class ="row mt-5 ml-5">
	<div class ="col-9 border border-dark pt-4 pl-4 pr-4 pb-3 bg-white  ">
          <h4 align="center"> <%=(@events.new_record? ? " Create Event" : "Update Event")%> </h4>
          <hr>
		<%= form_for(@events, :html => {class: "form-horizontal", role: "form"}) do |f| %>

		<div class="form-group pt-2">

		<%= f.label :name %>

			<%= f.text_field :name, class: "form-control", placeholder: "Event Name", autofocus: true %>
		</div>

		<div class="form-check form-check-inline mt-3 form-group">

		<%= f.label :types %>
              
			<div class="form-check-input ml-5">
			<%= f.radio_button :types, 'Indoor', :checked => true %> 
            <%= label :types, 'Indoor' %>
			</div>
         <div class="form-check-input ml-4">
			<%= f.radio_button :types, 'Outdoor', :checked => true %> 
            <%= label :types, 'Outdoor' %>
			</div>
		</div>

		<div class="form-group">
		<%= f.label :Players %>
			<%= f.text_field :no_players, class: "form-control", placeholder: "Total Players", autofocus: true %>
		</div>

		<div class="form-group">

		<%= f.label :Discrpition %>
			<%= f.text_field :info, class: "form-control", placeholder: "Event Name", autofocus: true %>
		</div>


		<div class="form-group row">

		<div class="col-sm-offset-2 col-sm-8">

		<%= f.submit(@events.new_record? ? " Create" : "Update", class: 'btn btn-primary btn-lg') %>

		</div>

		</div>

<% end %>
</div>
</div>
</div>
