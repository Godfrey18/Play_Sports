<h1 class ="text-dark"><%=(@events.present?)? "show" : "No events " %></h1>


<div class="row">
<%@events.each do |event| %>
   <div class="col-lg-3 col-sm-3 col-6">
    <%=link_to event_path(event) do %>
     <div class="card mt-3">
        <div class="card-body">
          <h2 class="card-title text-center text-capitalize text-dark" ><%=event.name%></h5>
          <h5 class="card-title list-inline"><%=event.no_players%></h5>
          <h5 class="card-title text-left"><%=event.types%></h5>
          <p class="card-text">With supporting text below as a natural lead-in to additional content.</p>
        
        </div>
    </div>
    <% end %>
   </div>
<% end %>
</div>