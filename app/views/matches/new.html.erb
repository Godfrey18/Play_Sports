<h1> Matches</h1>


<div class="container ml-5 mt-3">

<div class ="row mt-5 ml-5">
	<div class ="col-9 border border-dark pt-4 pl-4 pr-4 pb-3 bg-white  ">
          <h4 align="center"> <%=(@matches.new_record? ? " Create Match" : "Update Event")%> </h4>
          <hr>
		<%= form_for(@matches, :html => {class: "form-horizontal", role: "form"}) do |f| %>

		<div class="form-group">
				<%= f.label :HomeTeam %>
					<%= f.text_field :team_id, class: "form-control", placeholder: "Total Players", autofocus: true %>
		</div>
		<div class="form-group pt-2">

		<%= f.label :AwayTeam %>

			<%= f.text_field :away_team_id, class: "form-control", placeholder: "Event Name", autofocus: true %>
		</div>

		 <div class="form-controls">
			<div class="controls">
		<%= f.label :Event %>
			<%=f.collection_select(:event_id , Event.all, :id, :name, options ={:prompt => "-Select a Event"})%>

		</div>
	</div>

		

		<div class="form-group">

		<%= f.label :MatchDate %>
			<%= f.text_field :match_date, class: "form-control", placeholder: "Event Name", autofocus: true %>
		</div>


		<div class="form-group row">

		<div class="col-sm-offset-2 col-sm-8">

		<%= f.submit(@matches.new_record? ? " Create" : "Update", class: 'btn btn-primary btn-lg') %>

		</div>

		</div>

<% end %>
</div>
</div>
</div>
